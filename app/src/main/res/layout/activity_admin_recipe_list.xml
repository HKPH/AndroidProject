<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- SearchView -->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Tìm kiếm công thức..."
        android:iconifiedByDefault="false"
        android:layout_margin="8dp"/>

    <!-- Text for Unapproved Recipes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách chờ được duyệt"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:padding="8dp"/>

    <!-- RecyclerView for Unapproved Recipes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUnapproved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

    <!-- Text for Approved Recipes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách đã được duyệt"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:padding="8dp"/>

    <!-- RecyclerView for Approved Recipes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewApproved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

</LinearLayout>
